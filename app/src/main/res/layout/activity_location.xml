<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".LocationActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.makeramen.roundedimageview.RoundedImageView
            android:onClick="denpasar"
            android:layout_marginTop="60dp"
            android:layout_width="270dp"
            android:layout_height="150dp"
            android:src="@drawable/denpasar"
            android:scaleType="centerCrop"
            app:riv_corner_radius="10dp"
            android:layout_gravity="center"
        />

        <com.makeramen.roundedimageview.RoundedImageView
            android:onClick="badung"
            android:layout_marginTop="10dp"
            android:layout_width="270dp"
            android:scaleType="centerCrop"
            android:layout_height="150dp"
            android:src="@drawable/badung"
            app:riv_corner_radius="10dp"
            android:layout_gravity="center"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:onClick="gianyar"
            android:layout_marginTop="10dp"
            android:layout_width="270dp"
            android:scaleType="centerCrop"
            android:layout_height="150dp"
            android:src="@drawable/gianyar"
            app:riv_corner_radius="10dp"
            android:layout_gravity="center"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:onClick="karangasem"
            android:layout_marginTop="10dp"
            android:layout_width="270dp"
            android:scaleType="centerCrop"
            android:layout_height="150dp"
            android:src="@drawable/karangasem"
            app:riv_corner_radius="10dp"
            android:layout_gravity="center"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:onClick="bangli"
            android:layout_marginTop="10dp"
            android:layout_width="270dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bangli"
            app:riv_corner_radius="10dp"
            android:layout_gravity="center"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:onClick="jembrana"
            android:layout_marginTop="10dp"
            android:layout_width="270dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/jembrana"
            app:riv_corner_radius="10dp"
            android:layout_gravity="center"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_marginTop="10dp"
            android:layout_width="270dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/singaraja"
            app:riv_corner_radius="10dp"
            android:layout_gravity="center"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_marginTop="10dp"
            android:layout_width="270dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tabanan"
            app:riv_corner_radius="10dp"
            android:layout_gravity="center"/>

    </LinearLayout>
</ScrollView>