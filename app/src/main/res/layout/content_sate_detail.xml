<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SateDetail"
    tools:showIn="@layout/activity_sate_detail">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/badung1"
        android:scaleType="centerCrop"
        android:id="@+id/gambar2"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gambar2"
        android:text="SATE BALI"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="#000"
        android:id="@+id/judul"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/judul"
        android:text="A Classic Balinese Satai Pork and Chicken"
        android:textAlignment="center"
        android:paddingBottom="10dp"
        android:id="@+id/subtitle"
        />
    <View
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:layout_below="@id/subtitle"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent"
        android:layout_marginBottom="20dp"
        android:id="@+id/garis"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/sate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/garis" />

</RelativeLayout>